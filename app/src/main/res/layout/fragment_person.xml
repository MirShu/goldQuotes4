    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:animateLayoutChanges="true"
        android:background="@color/transparent">

        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/transparent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_back"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="16dp"
                android:paddingLeft="30px"
                android:src="@mipmap/icon_m_back" />

            <TextView
                android:id="@+id/tv_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="我"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:background="@mipmap/bc_background"
        >


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:src="@mipmap/icon_user_yonghu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="10dp"
            android:text="账号：KYSTCNZ"
            android:textColor="#ffff"
            android:textSize="16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#f2f2f2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="20dp"
        android:background="@drawable/setting_item_bg"
        android:orientation="vertical"
        android:paddingLeft="30px"
        android:paddingRight="30px">



        <RelativeLayout
            android:id="@+id/rl_clean"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.rey.material.widget.TextView
                android:id="@+id/tv_me_reading"
                style="@style/style_me_list_tv"
                android:drawableLeft="@mipmap/icon_reading"
                android:onClick="onClick"
                android:text="清除缓存" />

            <TextView
                android:id="@+id/tv_huancun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="54px"
                android:text="13.5KB" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_line" />




        <com.rey.material.widget.TextView
            android:id="@+id/tv_me_setting"
            style="@style/style_me_list_tv"
            android:drawableLeft="@mipmap/icon_setting"
            android:onClick="onClick"
            android:text="意见反馈" />



        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_line" />

        <com.rey.material.widget.TextView
            android:id="@+id/tv_me_opinion"
            style="@style/style_me_list_tv"
            android:drawableLeft="@mipmap/icon_opinion"
            android:onClick="onClick"
            android:text="关于我们" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_line" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.rey.material.widget.TextView
                style="@style/style_me_list_version"
                android:drawableLeft="@mipmap/icon_reading"
                android:onClick="onClick"
                android:text="版本信息" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:text="1.3.0" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_line" />

    </LinearLayout>
</LinearLayout>